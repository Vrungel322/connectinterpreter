<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_requests"
    tools:background="#4D222222"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_requests"
        android:layout_marginBottom="8dp"
        style="@style/ActionItem_ActionsScreen"
        app:srcCompat="@drawable/ic_requests_new"
        app:layout_constraintBottom_toTopOf="@+id/tv_requests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_requests"
        style="@style/Action_Text"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:text="@string/action_requests"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_requests"
        app:layout_constraintStart_toStartOf="@+id/iv_requests"/>
</androidx.constraintlayout.widget.ConstraintLayout>