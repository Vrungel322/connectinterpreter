<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00222222"
    android:paddingStart="@dimen/default_side_margins"
    android:paddingEnd="@dimen/default_side_margins"
    tools:background="#80D66D6D">

    <include
        android:layout_marginTop="100dp"
        android:id="@+id/vv_compensation_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/video_frame"
        app:layout_constraintBottom_toTopOf="@+id/tv_compensation_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_compensation_final"
        style="@style/CompensationStepDescription_Text"
        android:text="@string/compensation_step_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv_compensation_final" />

</android.support.constraint.ConstraintLayout>