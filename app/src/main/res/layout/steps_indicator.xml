<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/default_side_margins"
    android:paddingEnd="@dimen/default_side_margins"
    tools:background="@color/blue_new_ui_text">

    <TextView
        android:id="@+id/tv_indicator_1"
        style="@style/CompensationStepIndicator"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_indicator_2"
        style="@style/CompensationStepIndicator"
        android:gravity="center"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_3"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_indicator_3"
        style="@style/CompensationStepIndicator"
        android:gravity="center"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_4"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_indicator_4"
        style="@style/CompensationStepIndicator"
        android:gravity="center"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_5"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:text="5"
        android:id="@+id/tv_indicator_5"
        style="@style/CompensationStepIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_6"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_4"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:gravity="center"
        android:text="6"
        android:id="@+id/tv_indicator_6"
        style="@style/CompensationStepIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_7"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_5"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:gravity="center"
        android:text="7"
        android:id="@+id/tv_indicator_7"
        style="@style/CompensationStepIndicator"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/step_divider_1_2"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_2"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/step_divider_2_3"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_3"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_2"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/step_divider_3_4"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_4"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_3"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/step_divider_4_5"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_5"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_4"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/step_divider_5_6"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_6"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_5"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/step_divider_6_7"
        style="@style/Steps_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_indicator_7"
        app:layout_constraintStart_toEndOf="@+id/tv_indicator_6"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>