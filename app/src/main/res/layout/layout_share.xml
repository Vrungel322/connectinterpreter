<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/iv_share"
        style="@style/ActionItem_ActionsScreen"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share_new_ui" />

    <TextView
        android:id="@+id/tv_share"
        style="@style/Action_Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/drawer_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_share"
        app:layout_constraintStart_toStartOf="@+id/iv_share"
        tools:textColor="@color/colorPrimaryDark" />
</android.support.constraint.ConstraintLayout>