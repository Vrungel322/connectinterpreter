<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.RedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorRed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.BlueButton.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/colorFieldHint</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.TextViewBlack">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.LoaderDialog" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferencesTheme" parent="AppTheme.NoActionBar">
        <item name="android:textViewStyle">@style/AppTheme.TextViewBlack</item>
    </style>


    <!--new ui common-->
    <style name="Text_default">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="EditText_rounded">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:fontFamily">@font/font_montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/blue_new_ui</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="Button_fab">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/rounded_background_fab_red</item>
    </style>

    <style name="Button_fab_activatable" parent="Button_fab">
        <item name="android:background">@drawable/activateble_button</item>
    </style>

    <!--new ui-->
    <style name="Screen_Title" parent="Text_default">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/font_montserrat_semi_bold</item>
    </style>

    <style name="Text_toolbar" parent="Text_default">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text_news_item_title">
        <item name="android:textColor">@color/blue_new_ui</item>
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Text_tariff_title" parent="Text_user_info_block_title"></style>

    <style name="Text_tariff_price" parent="Text_user_info_block_title">
        <item name="android:textColor">@color/blue_new_ui_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text_tariff_minutes" parent="Text_tariff_price">
        <item name="android:textColor">@color/red_new_ui</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text_user_info_block_title" parent="Text_news_item_title">
        <item name="android:textColor">@color/blue_new_ui</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text_user_info_block_value" parent="Text_user_info_block_title">
        <item name="android:textColor">@color/blue_new_ui_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="Main_timer_background">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
    </style>

    <style name="Main_timer_time">
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textColor">@color/timer_color_with_minutes</item>
    </style>

    <style name="ActionItem_72">
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle_action_main_screen</item>
    </style>

    <style name="ActionItem_ActionsScreen" parent="ActionItem_72">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@drawable/circle_action_actions_screen</item>
    </style>

    <style name="ActionItem_Call" parent="ActionItem_72">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/circle_call</item>
    </style>

    <style name="Transparent_Activity" parent="Theme.Transparent">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CompensationStepIndicator">
        <item name="android:layout_marginTop">@dimen/default_elevation</item>
        <item name="android:layout_marginBottom">@dimen/default_elevation</item>
        <item name="android:elevation">@dimen/default_elevation</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:background">@drawable/compensation_step_indicator</item>
    </style>

    <style name="CompensationStepDescription_Text" parent="Text_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/font_montserrat_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/compensation_message_margin</item>
        <item name="android:layout_marginLeft">@dimen/compensation_message_margin</item>
        <item name="android:layout_marginEnd">@dimen/compensation_message_margin</item>
        <item name="android:layout_marginRight">@dimen/compensation_message_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="DatePicker" parent="Text_default">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColorPrimary">@color/blue_new_ui</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
    </style>

    <style name="RequestItem_title" parent="Text_default">
        <item name="android:fontFamily">@font/font_montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_new_ui_text</item>
    </style>

    <style name="RequestItem_time" parent="Text_default">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="RequestItem_badge" parent="Text_default">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="Requests_PickImage" parent="Text_default">
        <item name="android:fontFamily">@font/font_montserrat_semi_bold</item>
        <item name="android:textColor">@color/red_new_ui</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_background</item>

    </style>

    <style name="Steps_divider">
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Action_Text">
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font_open_sans_semi_bold</item>
    </style>

    <style name="Dialog_Primary_button_red" parent="Text_default">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_new_ui</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Dialog_Primary_button_blue" parent="Dialog_Primary_button_red">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_new_ui</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Timer_to_connect_interpreter" parent="Main_timer_time">
        <item name="android:textColor">@color/blue_new_ui</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Rate_Bar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/blue_new_ui_40</item>
        <item name="colorControlActivated">#FDA03A</item>
    </style>


</resources>
